# Server Configuration
PORT={MAIN_PORT}

# Database Configuration
DATABASE_TYPE=postgres # postgres or mongodb
DATABASE_URL=postgresql://{USER_NAME}:{PASSWORD}@localhost:5432/{DB_NAME}
MONGODB_URI=mongodb://localhost:27017/{DB_NAME}

# JWT Configuration
JWT_SECRET={JWT_SECRET}
JWT_EXPIRES_IN=7d

# Email Configuration
EMAIL_HOST={EMAIL_HOST}
EMAIL_PORT={EMAIL_PORT}
EMAIL_USERNAME={EMAIL_USERNAME}
EMAIL_PASSWORD={EMAIL_PASSWORD}
EMAIL_FROM={EMAIL_FROM}

# App Configuration
APP_NAME={APP_NAME}
API_URL={API_URL}
SITE_URL={SITE_URL}
SECURED_WHITELIST_SITE_URL={SECURED_WHITELIST_SITE_URL}
UNSECURED_WHITELIST_SITE_URL={UNSECURED_WHITELIST_SITE_URL}
ADMIN_URL={ADMIN_URL}
SECURED_WHITELIST_ADMIN_URL={SECURED_WHITELIST_ADMIN_URL}
UNSECURED_WHITELIST_ADMIN_URL={UNSECURED_WHITELIST_ADMIN_URL}

# File Upload Configuration
MAX_FILE_SIZE_MB=100
UPLOAD_PATH=./uploads

# Asset Management Configuration
ASSET_MANAGEMENT_TOOL=LOCAL # AWS or LOCAL
AWS_ID={AWS_ACCESS_KEY_ID}
AWS_SECRET={AWS_SECRET_ACCESS_KEY}
AWS_BUCKET_NAME={AWS_S3_BUCKET_NAME}
AWS_CLOUDFRONT_URL={AWS_CLOUDFRONT_URL}
AWS_REGION={AWS_REGION}
SIGNED_URL_EXPIRY_TIME_IN_MIN=60

# Bucket Configuration (Fixed Values)
CAMPAIGN_CATEGORIES_BUCKET=campaign-categories
CATEGORIES_BUCKET=categories
COMPANY_BUCKET=company-profiles
CAMPAIGNS_BUCKET=campaigns
EXTRA_DOCUMENTS_BUCKET=extras-documents
EXTRA_IMAGES_BUCKET=extras-images
TEAM_MEMBERS_BUCKET=team-members
USER_BUCKET=users

# Cache Configuration
CACHE_TTL=600
CACHE_MAX_ITEMS=1000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log